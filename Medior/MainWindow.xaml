<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medior"
        x:Class="Medior.MainWindow"
        mc:Ignorable="d"
        DataContext="{Binding MainWindowViewModel, Source={StaticResource ViewModelLocator}}"
        Loaded="Window_Loaded"
        Title="Medior" Height="450" Width="650" Icon="Media/image-gallery-96.png">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <RadioButton Content="Sorter" GroupName="Menu" IsChecked="True" Style="{StaticResource MenuButton}" Checked="SorterMenuButton_Checked" />
            <RadioButton Content="Service" GroupName="Menu" Style="{StaticResource MenuButton}" Checked="ServiceMenuButton_Checked" />
            <RadioButton Content="About" GroupName="Menu" Style="{StaticResource MenuButton}" Checked="AboutMenuButton_Checked" />
        </StackPanel>

        <Frame x:Name="NavigationFrame" 
               Grid.Column="1" 
               NavigationUIVisibility="Hidden" 
               Padding="10"
               Initialized="NavigationFrame_Initialized" />
    </Grid>
</Window>
